# HTTP сервер - редирект на HTTPS
server {
    listen 80;
    server_name ${APP_DOMAIN};
    
    # Для Let's Encrypt ACME challenge (для продакшена)
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }
    
    # Редирект на HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
}

# HTTPS сервер
server {
    listen 443 ssl;
    http2 on;
    server_name ${APP_DOMAIN};
    root /usr/share/nginx/html;
    index index.html;

    # SSL сертификаты
    # Для localhost используем самоподписанный сертификат
    # Для продакшена (через nip.io) используем Let's Encrypt
    # Проверяем наличие Let's Encrypt сертификата, иначе используем самоподписанный
    set $ssl_cert /etc/nginx/ssl/localhost.crt;
    set $ssl_key /etc/nginx/ssl/localhost.key;
    
    # Если используется nip.io или другой домен, пытаемся использовать Let's Encrypt
    # Для localhost всегда используем самоподписанный
    ssl_certificate /etc/nginx/ssl/localhost.crt;
    ssl_certificate_key /etc/nginx/ssl/localhost.key;
    
    # Альтернатива: если настроен Let's Encrypt для продакшена, раскомментируйте:
    # ssl_certificate /etc/letsencrypt/live/${APP_DOMAIN}/fullchain.pem;
    # ssl_certificate_key /etc/letsencrypt/live/${APP_DOMAIN}/privkey.pem;
    
    # SSL настройки
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/x-javascript application/xml+rss application/json application/javascript;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    # Проксирование API запросов к backend
    location /api {
        proxy_pass http://app:8000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # Увеличиваем таймауты для долгих запросов
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # Статические файлы frontend (включая assets)
    location /assets {
        try_files $uri @backend_assets;
    }

    # Проксирование статических файлов backend
    location @backend_assets {
        proxy_pass http://app:8000;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Статические файлы frontend
    location / {
        try_files $uri $uri/ /index.html;
        
        # Кэширование статических ресурсов
        location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {   
            expires 1y;
            add_header Cache-Control "public, immutable";
        }
    }

    # Health check endpoint
    location /health {
        access_log off;
        return 200 "healthy\n";
        add_header Content-Type text/plain;
    }
}

